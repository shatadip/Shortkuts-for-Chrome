{
    "manifest_version": 3,
    "name": "Shortkuts for Chrome",
    "version": "1.0",
    "description": "Chrome extension for useful shortcuts",
    "permissions": ["tabs"],
    "background": {
        "service_worker": "background.js"
      },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  